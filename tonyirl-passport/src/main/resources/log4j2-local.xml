<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN">
    <Properties>
        <Property name="BASE_DIR">/Users/tony/code/tmp/var/logs/passport</Property>
    </Properties>
    <Appenders>
        <Console name="Console">
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </Console>

        <!-- info log -->
        <RollingRandomAccessFile name="Infos" fileName="${BASE_DIR}/info.log"
                                 filePattern="${BASE_DIR}/infologs/$${date:yyyy-MM}/info-%d{yyyy-MM-dd}-%i.log">
            <Filters>
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>

        <!-- warn error fatal log-->
        <RollingRandomAccessFile name="Errors" fileName="${BASE_DIR}/error.log"
                                 filePattern="${BASE_DIR}/errorlogs/$${date:yyyy-MM}/error-%d{yyyy-MM-dd}-%i.log">
            <Filters>
                <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="Infos"/>
            <AppenderRef ref="Errors"/>
        </Root>
        <Logger name="org.springframework" level="INFO"/>
        <Logger name="org.apache" level="INFO"/>
        <Logger name="org.hibernate" level="INFO"/>
        <Logger name="org.mybatis" level="INFO"/>
        <Logger name="org.jboss" level="INFO"/>
        <Logger name="org.thymeleaf" level="WARN"/>
        <Logger name="org.jboss.netty" level="WARN"/>
        <Logger name="org.apache.http" level="WARN"/>
    </Loggers>
</Configuration>